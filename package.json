  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "export $(cat ./env/local.sh | xargs) && nest start",
    "start:dev": "export $(cat ./env/local.sh | xargs) && nest start --watch",
    "start:debug": "export $(cat ./env/local.sh | xargs) && nest start --debug --watch",
    "start:prod": "export $(cat ./env/prod.sh | xargs) && ./node_modules/db-migrate/bin/db-migrate up -e prod && node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "export $(cat ./env/test.sh | xargs) && jest",
    "test:watch": "export $(cat ./env/test.sh | xargs) && jest --watch",
    "test:cov": "export $(cat ./env/test.sh | xargs) && jest --coverage",
    "test:debug": "export $(cat ./env/test.sh | xargs) && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "gen:swagger-types": "npx openapi-zod-client \"http://localhost:3300/api-yaml\" -o \"test/model/clientTypes.ts\""
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@nestjs/common": "^11.0.15",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.15",
    "@nestjs/platform-express": "^11.0.15",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/sequelize": "^11.0.0",
    "@nestjs/swagger": "^11.1.1",
    "@nestjs/throttler": "^6.4.0",
    "@supercharge/promise-pool": "^3.2.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "h3-js": "^4.2.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "mysql2": "^3.14.0",
    "nest-winston": "^1.10.2",
    "nestjs-zod": "^4.3.1",
    "rxjs": "^7.8.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.15",
    "@testcontainers/mysql": "^10.24.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/luxon": "^3.6.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "@types/sequelize": "^4.28.20",
    "@types/set-cookie-parser": "^2.4.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@zodios/core": "^10.9.6",
    "axios": "^1.8.4",
    "cookie": "^1.0.2",
    "db-migrate": "^0.11.14",
    "db-migrate-mysql": "^3.0.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "set-cookie-parser": "^2.7.1",
    "source-map-support": "^0.5.21",
